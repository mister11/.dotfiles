#!/usr/bin/env bash

latest_tag_name=$(curl -s https://api.github.com/repos/elixir-lang/elixir/tags \
  | jq ".[0].name" \
  | tr -d '"')


asdf install elixir "ref:$latest_tag_sha"
asdf global elixir "ref:$latest_tag_sha"

rm "$HOME"/.asdf/shims/livebook

mix archive.install hex phx_new
mix escript.install hex livebook 

asdf reshim elixir
