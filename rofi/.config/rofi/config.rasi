configuration {
	modi: "window,run,drun";
	font: "JetBrainsMono Nerd Font Mono 12";
    sorting-method: "fzf";
    matching: "fuzzy";
    timeout {
      action: "kb-cancel";
      delay:  0;
    }
    filebrowser {
      directories-first: true;
      sorting-method:    "name";
    }
}

@theme "/usr/share/rofi/themes/gruvbox-dark-hard.rasi"
