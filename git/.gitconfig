[user]
	name = Sven Vidak
	email = sven.vidak@gmail.com

[core]
	editor = nvim
    pager = delta

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = master

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    line-numbers = true
    side-by-side = true

[pull]
	rebase = true
